name = ITK Openideal
description = Subtheme for socrates
core = 7.x

base theme = socrates

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Styles
;;;;;;;;;;;;;;;;;;;;;
stylesheets[all][] = css/itk-styles.css


; Global
; --------------
settings[toggle_name] = 1
settings[toggle_search] = 0
settings[bootstrap_navbar_position] = 'fixed-top'


; Advanced
; --------------

settings[bootstrap_cdn] = 3.3.7
settings[bootstrap_bootswatch] = 'yeti'

; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;
;
  scripts[] = 'scripts/jquery.bxslider.min.js'
  scripts[] = 'scripts/socrates.js'
